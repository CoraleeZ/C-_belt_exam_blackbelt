@model User

<h1>Register</h1>

<form asp-action="Process_Register" asp-controller="Home" method="post">

    <div class="form-group">
    <div>
    <span asp-validation-for="Name" style="color:red;"></span>
    </div>
    Name:<input type="text" asp-for="Name">
    </div>

    <div class="form-group">
    <div>
    <span asp-validation-for="Email" style="color:red;"></span>
    </div>
    Email:<input type="text" asp-for="Email">
    </div>
    
    <div class="form-group">
    <div>
    <span asp-validation-for="Password" style="color:red;"></span>
    </div>
    Password:<input asp-for="Password">
    </div>

    <div class="form-group">
    <div>
    <span asp-validation-for="C_Password" style="color:red;"></span>
    </div>
    Comfirm password:<input  asp-for="C_Password">
    </div> 

    <div class="form-group">
    <input type="submit" value="Register">
    </div>
</form>