@model NewPlan_wrapper
<h1 style="display:inline-block;">Dojo Activity Center</h1>
<a href="/home" style="margin-left:40px;">Home</a>
<a href="/logout" style="margin-left:40px;">Logout</a>
<hr>
<form asp-action="Process_newplan" asp-controller="Home" method="post">

    <div class="form-group">
    <div>
    <span asp-validation-for="Title" style="color:red;"></span>
    </div>
    Title:<input type="text" asp-for="Title">
    </div>

    <div class="form-group">
    <div>
    <span asp-validation-for="Date" style="color:red;"></span>
    </div>
    Date:<input type="date" asp-for="Date" placeholder="mm/dd/yyyy">
    </div>

    <div class="form-group">
    <div>
    <span asp-validation-for="Time" style="color:red;"></span>
    </div>
    Time:<input type="time" asp-for="Time">
    </div>

    <div class="form-group">
    <div>
    <span asp-validation-for="Duration_time" style="color:red;"></span>
    </div>
    <div>
    <span asp-validation-for="Duration_set" style="color:red;"></span>
    </div>
    <div class="sm-5">
        Duration:
        <input class="form-control" type="text" asp-for="Duration_time">
        <div class="input-group-addon select-input">
            <select class="selectpicker form-control" asp-for="Duration_set">
                <option value="Minutes">Minutes</option>
                <option value="Hours">Hours</option>
                <option value="Days">Days</option>
            </select>
        </div>
    </div>
</div>

   
    
    <div class="form-group">
    <div>
    <span asp-validation-for="Description" style="color:red;"></span>
    </div>
    Description:<textarea asp-for="Description"></textarea>
    </div>

    <div class="form-group">
    <input type="submit" value="Create Activity">
    </div>
</form>