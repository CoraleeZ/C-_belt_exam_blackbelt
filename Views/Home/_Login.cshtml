@model Login

<center><h1>Login</h1></center>

<form asp-action="Process_Login" asp-controller="Home" method="post">
    <div class="form-group">
    <div>
    <span asp-validation-for="logEmail" style="color:red;"></span>
    </div>
    Email:<input type="text" asp-for="logEmail">
    </div>

    <div class="form-group">
    <div>
    <span asp-validation-for="logPassword" style="color:red;"></span>
    </div>
    Password:<input asp-for="logPassword">
    </div>

    <div class="form-group">
    <input type="submit" value="Login!">
    </div>
</form>